[
    {
        "namespace": "closeToTray",
        "functions": [
            {
                "name": "registerWindow",
                "type": "function",
                "description": "Causes the given window to be moved to the tray when it is closed.",
                "async": true,
                "parameters": [
                    {
                        "name": "windowId",
                        "type": "integer",
                        "description": "ID of the affected window."
                    }
                ]
            }
        ],
        "events": [
            {
                "name": "onFail",
                "type": "function",
                "description": "Called when Close to Tray fails because there is no tray.",
                "parameters": [
                    {
                        "name": "error",
                        "$ref": "closeToTray.Error"
                    }
                ]
            }
        ],
        "types": [
            {
                "id": "Error",
                "type": "object",
                "properties": {
                    "code": {
                        "type": "string",
                        "description": "Error code"
                    },
                    "desktopEnvironment": {
                        "type": "string",
                        "optional": true,
                        "description": "The detected desktop environment"
                    }
                }
            }
        ]
    }
]
