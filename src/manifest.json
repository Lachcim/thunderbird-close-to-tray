{
    "manifest_version": 3,
    "name": "Tray on Close (for Windows)",
    "short_name": "Tray on Close",
    "description": "X moves the window to the tray, _ minimizes it. Just like Discord.",
    "author": "Lachcim",
    "homepage_url": "https://github.com/Lachcim/thunderbird-tray-on-close",
    "version": "1.0",
    "browser_specific_settings": {
        "gecko": {
            "id": "@tray-on-close.lachcim",
            "strict_min_version": "50.0"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },
    "experiment_apis": {
        "trayOnClose": {
            "schema": "trayOnClose.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["trayOnClose"]],
                "script": "trayOnClose.js"
            }
        }
    }
}
