{
    "manifest_version": 3,
    "name": "Close to Tray (for Windows)",
    "short_name": "Close to Tray",
    "description": "X moves Thunderbird to the tray, _ minimizes it. Just like Discord.",
    "author": "Lachcim",
    "homepage_url": "https://github.com/Lachcim/thunderbird-close-to-tray",
    "version": "1.0",
    "browser_specific_settings": {
        "gecko": {
            "id": "@close-to-tray.lachcim",
            "strict_min_version": "50.0"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },
    "experiment_apis": {
        "closeToTray": {
            "schema": "closeToTray.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["closeToTray"]],
                "script": "closeToTray.js"
            }
        }
    }
}
