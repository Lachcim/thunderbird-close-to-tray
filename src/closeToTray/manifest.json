{
    "manifest_version": 2,
    "name": "Close to Tray",
    "short_name": "Close to Tray",
    "description": "X moves Thunderbird to the tray, _ minimizes it. Just like Discord.",
    "author": "Lachcim",
    "homepage_url": "https://github.com/Lachcim/thunderbird-close-to-tray",
    "version": "1.5",
    "browser_specific_settings": {
        "gecko": {
            "id": "@close-to-tray.lachcim",
            "strict_min_version": "76.0",
            "strict_max_version": "149.*"
        }
    },
    "icons": {
        "512": "img/512.png",
        "256": "img/256.png",
        "128": "img/128.png",
        "64": "img/64.png",
        "32": "img/32.png"
    },
    "background": {
        "scripts": ["background.js", "errorHandler.js"]
    },
    "experiment_apis": {
        "closeToTray": {
            "schema": "closeToTray.json",
            "parent": {
                "scopes": ["addon_parent"],
                "paths": [["closeToTray"]],
                "script": "closeToTray.js"
            }
        }
    }
}
